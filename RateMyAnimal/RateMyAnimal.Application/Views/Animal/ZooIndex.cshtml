@model IEnumerable<CategoryViewModel>

<div class="row justify-content-md-center">
    <div class="col-md-6 col-md-auto">

        <div class="col-md-6 col-md-auto">
            <label class="col-md-8 control-label fw-bold">Categories</label>
            <select class="form-control col-md-8" id="DdlCategory_id">
                <option value="null">All Categories</option>
                @foreach (CategoryViewModel c in @Model)
                {
                    <option value="@c.Id">@c.Description</option>
                }
            </select>
        </div>

        <div class="col-md-4 col-md-auto form-group">
            <div class="col-md-12 mt-3">
                <input type="submit" class="btn btn-primary btn-custom-color w-100" value="Search" onclick="animal.searchZoo()" />
            </div>
        </div>

        <div id="SearchZooPartial"></div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Views/Animal/animal.js"></script>
}
