@model CategoryViewModel

<div class="row justify-content-md-center">
    <div class="col-md-4 col-md-auto">
        <h2>@ViewBag.Title</h2>

        <form asp-action="SaveCategory" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Description" class="control-label fw-bold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-12 mt-3">
                    <input type="submit" class="btn btn-primary btn-custom-color w-100" value="Save" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
